<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg"
    android:layoutAnimation="@anim/layout_animation_list">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/home_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="ContentDescription" />
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/home_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/home_img"
                android:layout_marginTop="@dimen/home_title_m_t"
                android:fontFamily="@font/roboto_light"
                android:gravity="center"
                android:textColor="@color/title"
                android:textSize="@dimen/home_title_t_s"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/home_kota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/home_nama"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto_light"
                android:gravity="center"
                android:textColor="@color/title"
                android:textSize="@dimen/home_kota_t_s" />

            <TextView
                android:id="@+id/home_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/home_kota"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/home_desc_m_l_m_r"
                android:layout_marginTop="@dimen/home_desc_m_t"
                android:layout_marginRight="@dimen/home_desc_m_l_m_r"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:textColor="@color/description"
                android:textSize="@dimen/home_desc_t_s" />

            <View
                android:layout_width="48dp"
                android:layout_height="2dp"
                android:layout_below="@id/home_desc"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:background="#667886" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
